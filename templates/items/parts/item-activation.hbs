        <span class="sep">{{ localize "DND5E.per" }}</span>
        <select name="system.usageProfiles.{{system.usageProfileIndex}}.uses.per">
            {{#select (getProperty (lookup system.usageProfiles system.usageProfileIndex) "uses.per")}}
