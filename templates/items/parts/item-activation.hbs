            <option value="{{key}}">{{name}}</option>
            {{/each}}
            {{/select}}
        </select>
        <select name="system.usageProfiles.{{system.usageProfileIndex}}.target.type">
            {{#select (getProperty (lookup system.usageProfiles system.usageProfileIndex) "target.type")}}
