            value="{{ getProperty (lookup system.usageProfiles system.usageProfileIndex) "target.value" }}" placeholder="&mdash;">
        <select name="system.usageProfiles.{{system.usageProfileIndex}}.target.units">
            {{#select (getProperty (lookup system.usageProfiles system.usageProfileIndex) "target.units")}}
