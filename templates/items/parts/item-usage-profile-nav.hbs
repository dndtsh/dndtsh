{{#if (or editable system.usageProfiles._keys.length)}}

{{!-- Item Usage Navigation --}}
<nav class="usage-profile-navigation sheet-navigation tabs" data-group="primary">

    {{!-- Profile List Heading --}}
    {{#if (eq item.type "weapon")}}
    <h3 class="usage-profile-navigation-header">{{ localize "DND5E.ItemUsageProfilesTypeWeapon" }}</h3>
    {{/if}}
    {{#if (eq item.type "spell")}}
    <h3 class="usage-profile-navigation-header">{{ localize "DND5E.ItemUsageProfilesTypeSpell" }}</h3>
    {{/if}}
    {{#if (eq item.type "feat")}}
    <h3 class="usage-profile-navigation-header">{{ localize "DND5E.ItemUsageProfilesTypeFeat" }}</h3>
    {{/if}}
    {{#if (eq item.type "equipment")}}
    <h3 class="usage-profile-navigation-header">{{ localize "DND5E.ItemUsageProfilesTypeEquipment" }}</h3>
    {{/if}}
    {{#if (eq item.type "consumable")}}
    <h3 class="usage-profile-navigation-header">{{ localize "DND5E.ItemUsageProfilesTypeConsumable" }}</h3>
    {{/if}}

    {{log "Render Navigation" system.usageProfiles level="info"}}

    {{!-- Profile List Content --}}
    {{#each system.usageProfiles as |usageProfile|}}

    {{log "item-usage-profile-nav" "usageProfile" usageProfile level="info"}}

    {{#if (eq ../options.selectedUsageProfileId usageProfile._id)}}

    {{#if usageProfile.name}}
    <a class="usage-profile-navigation-tab item active">{{ usageProfile.name }}</a>
    {{else}}
    <a class="usage-profile-navigation-tab item active">{{ localize "DND5E.Untitled" }}</a>
    {{/if}}

    {{else}}

    {{#if usageProfile.name}}
    <a class="usage-profile-navigation-tab usage-profile-control usage-profile-navigate item" data-target-usage-profile-id={{usageProfile._id}}>{{ usageProfile.name }}</a>
    {{else}}
    <a class="usage-profile-navigation-tab usage-profile-control usage-profile-navigate item" data-target-usage-profile-id={{usageProfile._id}}>{{ localize "DND5E.Untitled" }}</a>
    {{/if}}

    {{/if}}

    {{/each}}

    {{!-- Profile List Add Button --}}
    {{#if editable}}
    <a class="usage-profile-navigation-tab item usage-profile-control usage-profile-add"><i class="fas fa-plus"></i></a>
    {{/if}}
</nav>

{{/if}}