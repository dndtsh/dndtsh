<div class="dnd5e chat-card item-card" data-actor-id="{{actor._id}}" data-item-id="{{item._id}}"
     {{#if tokenId}}data-token-id="{{tokenId}}"{{/if}} {{#if isSpell}}data-spell-level="{{item.system.level}}"{{/if}}>
    <header class="card-header flexrow">
        <img src="{{item.img}}" title="{{item.name}}" width="36" height="36"/>
        <h3 class="item-name">{{item.name}}</h3>
    </header>

    {{log "this" this level="info"}}
    {{log "item" item level="info"}}

    {{#if (gt item.system.usageProfiles.length 1)}}
    {{#if itemUsageProfile}}
    <div class="card-subheader">
        <h4 class="item-usage-profile">{{itemUsageProfileSubheader}}</h3>
    </div>
    {{/if}}
    {{/if}}

    <div class="card-content">
        {{{data.description.value}}}
        {{#if data.materials.value}}
        <p><strong>{{ localize "DND5E.RequiredMaterials" }}.</strong> {{data.materials.value}}</p>
        {{/if}}
    </div>

    <div class="card-buttons">
        {{#if hasAttack}}<button data-action="attack">{{ localize "DND5E.Attack" }}</button>{{/if}}

        {{#if hasDamage}}
        <button data-action="damage">
            {{#if isHealing}}{{ localize "DND5E.Healing" }}
            {{else}}{{localize "DND5E.Damage" }}{{/if}}
        </button>
        {{/if}}

        {{#if hasSave}}
        <button data-action="save" data-ability="{{itemUsageProfile.save.ability}}">
            {{ localize "DND5E.SavingThrow" }} {{labels.save}}
        </button>
        {{/if}}

        {{#if itemUsageProfile.formula}}
        <button data-action="formula">{{ localize "DND5E.OtherFormula"}}</button>
        {{/if}}

        {{#if hasAreaTarget}}
        <button data-action="placeTemplate">{{ localize "DND5E.PlaceTemplate" }}</button>
        {{/if}}

        {{#if isTool}}
        <button data-action="toolCheck" data-ability="{{itemUsageProfile.ability.value}}">{{ localize "DND5E.Use" }} {{item.name}}</button>
        {{/if}}

        {{#if hasAbilityCheck}}
        <button data-action="abilityCheck" data-ability="{{itemUsageProfile.ability}}">{{labels.abilityCheck}}</button>
        {{/if}}
    </div>

    <footer class="card-footer">
        {{#each data.properties}}
        <span>{{this}}</span>
        {{/each}}
    </footer>
</div>
