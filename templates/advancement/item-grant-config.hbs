<form autocomplete="off">
  {{> "shaper.advancement-controls"}}
  <div class="form-group">
    <label>{{localize "SHAPER.AdvancementItemGrantOptional"}}</label>
    <div class="form-fields">
      <input type="checkbox" name="data.configuration.optional" {{checked data.configuration.optional}}>
    </div>
    <p class="hint">{{localize "SHAPER.AdvancementItemGrantOptionalHint"}}</p>
  </div>

  {{#if showSpellConfig}}
    {{> "shaper.advancement-spell-config"}}
  {{/if}}

  <div class="drop-target">
    <ol class="items-list">
      <li class="items-header flexrow"><h3 class="item-name">{{localize "DOCUMENT.Items"}}</h3></li>
      <ol class="item-list">
      {{#each data.configuration.items}}
        <li class="item flexrow" data-item-uuid="{{this}}">
          <div class="item-name">{{{shaper-linkForUuid this}}}</div>
          <div class="item-controls flexrow">
            <a class="item-control item-action" data-action="delete" title="{{localize 'SHAPER.ItemDelete'}}">
              <i class="fas fa-trash"></i>
            </a>
          </div>
        </li>
      {{/each}}
      </ol>
    </ol>

    <p class="hint centered">{{localize "SHAPER.AdvancementItemGrantDropHint"}}</p>
  </div>
</form>
