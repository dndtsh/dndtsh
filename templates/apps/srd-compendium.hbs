<article>
  <aside>
    <header>
      <h2>{{localize "DND5E.Disclaimer"}}</h2>
    </header>
    <section>{{{disclaimer}}}</section>
  </aside>
  <main>
    <header>
      <h2>{{localize "DND5E.Contents"}}</h2>
    </header>
    <section>
      {{#each chapters}}
      <div class="chapter" data-entry-id="{{_id}}">
        <h3><a class="journal-entry-link">{{name}}</a></h3>
        {{#if showPages}}
        <ul class="pages">
          {{#each pages}}
          <li><a class="journal-entry-page-link" data-page-id="{{_id}}">{{name}}</a></li>
          {{/each}}
        </ul>
        {{/if}}
      </div>
      {{/each}}
    </section>
  </main>
</article>
