<p>{{title}}</p>

<div class="notes">
  {{#each notes}}
  <p class="note">{{this}}</p>
  {{/each}}
</div>

<div class="warnings">
  {{#each warnings}}
  <p class="notification warning">{{this}}</p>
  {{/each}}
</div>

<form id="ability-use-form">
  {{#if canConsumeSlot}}
  <div class="form-group">
    <label>{{ localize "DND5E.SpellCastUpcast" }}</label>
    <div class="form-fields">
      <select name="currentSlot">
        {{#select currentSlot}}
        {{#each spellLevels as |l|}}
        <option value="{{l.level}}" {{disabled (not l.canCast)}}>{{l.label}}</option>
        {{/each}}
        {{/select}}
      </select>
    </div>
  </div>

  <div class="form-group">
    <label class="checkbox">
      <input type="checkbox" name="consumeSlot" {{checked consumeSlot}}>{{localize "DND5E.SpellCastConsume"}}
    </label>
  </div>
  {{/if}}

  {{#if canConsumeUses}}
  <div class="form-group">
    <label class="checkbox">
      <input type="checkbox" name="consumeUsage" {{checked consumeUsage}}>{{localize "DND5E.AbilityUseConsume"}}
    </label>
  </div>
  {{/if}}

  {{#if canConsumeResource}}
  <div class="form-group">
    <label class="checkbox">
      <input type="checkbox" name="consumeResource" {{checked consumeResource}}>{{localize "DND5E.ConsumeResource"}}
    </label>
  </div>
  {{/if}}

  {{#if canCreateTemplate}}
  <div class="form-group">
    <label class="checkbox">
      <input type="checkbox" name="createMeasuredTemplate" {{checked createMeasuredTemplate}}>{{localize "DND5E.PlaceTemplate"}}
    </label>
  </div>
  {{/if}}

  <footer>
    <button data-type="submit" {{disabled disabled}}>
      <i class="fa-solid {{icon}}"></i> {{localize label}}
    </button>
  </footer>
</form>
