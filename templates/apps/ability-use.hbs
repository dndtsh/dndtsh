<form id="ability-use-form">
    <p>{{title}}</p>
    <p class="notes">{{note}}</p>
    {{#each errors}}
    <p class="notification error">{{this}}</p>
    {{/each}}

    {{#if config.slot}}
    <div class="form-group">
        <label>{{ localize "DND5E.SpellCastUpcast" }}</label>
        <div class="form-fields">
            <select name="slotLevel">
                {{#select config.value.slotLevel}}
                {{#each slotOptions as |l|}}
                <option value="{{l.level}}" {{disabled (not l.canCast)}}>{{l.label}}</option>
                {{/each}}
                {{/select}}
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="checkbox">
            <input type="checkbox" name="slot" {{checked config.value.slot}}>{{localize "DND5E.SpellCastConsume"}}
        </label>
    </div>
    {{/if}}

    {{#if config.uses}}
    <div class="form-group">
        <label class="checkbox">
            <input type="checkbox" name="uses" {{checked config.value.uses}}>{{localize "DND5E.AbilityUseConsume"}}
        </label>
    </div>
    {{/if}}

    {{#if config.quantity}}
    <div class="form-group">
        <label class="checkbox">
            <input type="checkbox" name="quantity" {{checked config.value.quantity}}>{{localize "DND5E.AbilityUseConsume"}}
        </label>
    </div>
    {{/if}}

    {{#if config.resource}}
    <div class="form-group">
        <label class="checkbox">
            <input type="checkbox" name="resource" {{checked config.value.resource}}>{{localize "DND5E.ConsumeResource"}}
        </label>
    </div>
    {{/if}}

    {{#if config.recharge}}
    <div class="form-group">
        <label class="checkbox">
            <input type="checkbox" name="recharge" {{checked config.value.recharge}}>{{localize "DND5E.ConsumeRecharge"}}
        </label>
    </div>
    {{/if}}

    {{#if config.template}}
    <div class="form-group">
        <label class="checkbox">
            <input type="checkbox" name="template" {{checked config.value.template}}>{{localize "DND5E.PlaceTemplate"}}
        </label>
    </div>
    {{/if}}
</form>
