<form class="{{cssClass}} flexcol" autocomplete="off">

    {{!-- Sheet Header --}}
    <header class="sheet-header flexrow">
        <img class="profile" src="{{actor.img}}" title="{{actor.name}}" data-edit="img"/>

        <section class="header-details flexrow">
            {{> "shaper.actor-warnings"}}

            <h1 class="charname">
                <input name="name" type="text" value="{{actor.name}}" placeholder="{{ localize 'SHAPER.Name' }}"/>
            </h1>

            <aside class="header-exp flexcol">
                <div class="charlevel" title="{{multiclassLabels}}">
                    <label>{{ localize "SHAPER.Level" }} {{system.details.level}}</label>
                    <span class="levels">{{classLabels}}</span>
                </div>

                {{#unless disableExperience}}
                <div class="experience flexrow">
                    {{numberInput system.details.xp.value name="system.details.xp.value" placeholder="0"}}
                    <span class="sep">/</span>
                    <span class="max">{{system.details.xp.max}}</span>
                </div>
                <div class="xpbar">
                    <span class="bar" style="width: {{system.details.xp.pct}}%"></span>
                </div>
                {{/unless}}
            </aside>

            {{!-- Character Summary --}}
            <ul class="summary flexrow">
                <li>
                    <input type="text" name="system.details.race" value="{{system.details.race}}" placeholder="{{ localize 'SHAPER.Race' }}"/>
                </li>
                <li>
                    {{#if labels.background}}
                        <span title="{{localize 'SHAPER.Background'}}">{{labels.background}}</span>
                    {{else}}
                        <input type="text" name="system.details.background" value="{{system.details.background}}" placeholder="{{ localize 'SHAPER.Background' }}"/>
                    {{/if}}
                </li>
                <li>
                    <input type="text" name="system.details.alignment" value="{{system.details.alignment}}" placeholder="{{ localize 'SHAPER.Alignment' }}"/>
                </li>
            </ul>

            {{!-- Header Attributes --}}
            <ul class="attributes flexrow">
                <li class="attribute health">
                    <h4 class="attribute-name box-title">{{ localize "SHAPER.HitPoints" }}</h4>
                    <div class="attribute-value multiple">
                        <input name="system.attributes.hp.value" type="number" step="any"
                            value="{{system.attributes.hp.value}}" placeholder="10"
                            title="{{localize 'SHAPER.HitPointsCurrent'}}">
                        <span class="sep"> / </span>
                        <input name="system.attributes.hp.max" type="number" step="any"
                            value="{{system.attributes.hp.max}}" placeholder="10"
                            title="{{localize 'SHAPER.HitPointsMax'}}">
                    </div>
                    <footer class="attribute-footer">
                        <input name="system.attributes.hp.temp" type="number" step="any" class="temphp"
                            placeholder="+{{ localize 'SHAPER.Temp' }}"
                            value="{{system.attributes.hp.temp}}"
                            title="{{localize 'SHAPER.HitPointsTemp'}}">
                        <input name="system.attributes.hp.tempmax" type="number" step="any" class="temphp"
                            placeholder="+{{ localize 'SHAPER.Max' }}"
                            value="{{system.attributes.hp.tempmax}}"
                            title="{{localize 'SHAPER.HitPointsTempMax'}}">
                    </footer>
                </li>

                <li class="attribute hit-dice">
                    <h4 class="attribute-name box-title">
                        {{ localize "SHAPER.HitDice" }}
                        <a class="config-button" data-action="hit-dice" title="{{localize 'SHAPER.HitDiceConfig'}}"><i class="fas fa-cog"></i></a>
                    </h4>
                    <div class="attribute-value multiple">
                        <label class="hit-dice">
                            <span title="{{localize 'SHAPER.HitDiceRemaining'}}">{{system.attributes.hd}}</span>
                            <span class="sep"> / </span>
                            <span title="{{localize 'SHAPER.HitDiceMax'}}">{{system.details.level}}</span>
                        </label>
                    </div>
                    <footer class="attribute-footer">
                        <a class="rest short-rest" title="{{localize 'SHAPER.ShortRest'}}">{{ localize "SHAPER.RestS" }}</a>
                        <a class="rest long-rest" title="{{localize 'SHAPER.LongRest'}}">{{ localize "SHAPER.RestL" }}</a>
                    </footer>
                </li>


                <li class="attribute movement">
                    <h4 class="attribute-name box-title">
                        {{ localize "SHAPER.Movement" }}
                        <a class="config-button" data-action="movement" title="{{localize 'SHAPER.MovementConfig'}}"><i class="fas fa-cog"></i></a>
                    </h4>
                    <div class="attribute-value">
                        <span>{{movement.primary}}</span>
                    </div>
                    <footer class="attribute-footer">
                        <span>{{movement.special}}</span>
                    </footer>
                </li>

                <li class="attribute initiative">
                    <h4 class="attribute-name box-title rollable" data-action="rollInitiative">{{ localize "SHAPER.Initiative" }}</h4>
                    <div class="attribute-value">
                        <span>{{numberFormat system.attributes.init.total decimals=0 sign=true}}</span>
                    </div>
                    <footer class="attribute-footer">
                        <span>{{ localize "SHAPER.Modifier" }}</span>
                        <input name="system.attributes.init.value" type="text" data-dtype="Number" placeholder="0"
                               value="{{numberFormat system.attributes.init.value decimals=0 sign=true}}"/>
                    </footer>
                </li>
            </ul>
        </section>
    </header>

    {{!-- Character Sheet Navigation --}}
    <nav class="sheet-navigation tabs" data-group="primary">
        <a class="item active" data-tab="attributes">{{ localize "SHAPER.Attributes" }}</a>
        <a class="item" data-tab="inventory">{{ localize "SHAPER.Inventory" }}</a>
        <a class="item" data-tab="features">{{ localize "SHAPER.Features" }}</a>
        <a class="item" data-tab="spellbook">{{ localize "SHAPER.Spellbook" }}</a>
        <a class="item" data-tab="effects">{{ localize "SHAPER.Effects" }}</a>
        <a class="item" data-tab="biography">{{ localize "SHAPER.Biography" }}</a>
    </nav>

    {{!-- Character Sheet Body --}}
    <section class="sheet-body">

        <div class="tab attributes flexrow" data-group="primary" data-tab="attributes">

            {{!-- Ability Scores --}}
            <ul class="ability-scores flexrow">
            {{#each system.abilities as |ability id|}}
                <li class="ability" data-ability="{{id}}">
                    <h4 class="ability-name box-title rollable">{{ability.label}}</h4>
                    {{numberInput ability.value name=(concat "system.abilities." id ".value")
                        class="ability-score" placeholder="10"}}
                    <a class="config-button" data-action="ability" title="{{localize 'SHAPER.AbilityConfigure'}}"><i class="fas fa-cog"></i></a>
                </li>
            {{/each}}
            </ul>

            {{!-- Skills --}}
            <ul class="skills-list">
            {{#each config.skills as |obj s|}}
            {{#with (lookup ../system.skills s) as |skill|}}
                <li class="skill flexrow" data-skill="{{s}}">
                    <input type="hidden" name="system.skills.{{s}}.value" value="{{skill.baseValue}}" data-dtype="Number"/>
                    <div class="skill-name-controls">
                      <h4 class="skill-name rollable">{{skill.label}}</h4>
                      <a class="config-button" data-action="skill" title="{{localize 'SHAPER.SkillConfigure'}}"><i class="fas fa-cog"></i></a>
                    </div>
                    <span class="skill-ability">{{skill.ability}}</span>
                    <span class="skill-mod" title="{{ localize 'SHAPER.SkillModifierHint' skill=skill.label }}">
                        {{numberFormat skill.total decimals=0 sign=true}}
                    </span>
                    <span class="skill-passive" title="{{ localize 'SHAPER.SkillPassiveHint' skill=skill.label }}">
                        ({{skill.passive}})
                    </span>
                </li>
            {{/with}}
            {{/each}}
            </ul>

            <section class="center-pane flexcol">

                {{!-- Body Attributes --}}
                <ul class="attributes flexrow">
                    {{#each resources as |res|}}
                    <li class="attribute resource">
                        <h4 class="attribute-name box-title">
                            <input name="system.resources.{{res.name}}.label" type="text" value="{{res.label}}"
                                   placeholder="{{res.placeholder}}" />
                        </h4>
                        <div class="attribute-value">
                            <label class="recharge checkbox flexcol">
                                <span>{{ localize "SHAPER.AbbreviationSR" }}</span><input name="system.resources.{{res.name}}.sr" type="checkbox" {{checked res.sr}}/>
                            </label>

                            {{numberInput res.value name=(concat "system.resources." res.name ".value")
                                placeholder="0"}}
                            <span class="sep"> / </span>
                            {{numberInput res.max name=(concat "system.resources." res.name ".max") placeholder="0"}}

                            <label class="recharge checkbox flexcol">
                                <span>{{ localize "SHAPER.AbbreviationLR" }}</span><input name="system.resources.{{res.name}}.lr" type="checkbox" {{checked res.lr}}/>
                            </label>
                        </div>
                    </li>
                    {{/each}}
                </ul>

                {{!-- Counters --}}
                <div class="counters">
                    <div class="counter flexrow death-saves">
                        <h4 class="rollable" data-action="rollDeathSave">{{ localize "SHAPER.DeathSave" }}</h4>
                        <div class="counter-value">
                            <i class="fas fa-check"></i>
                            {{numberInput system.attributes.death.success name="system.attributes.death.success"
                                placeholder="0"}}
                            <i class="fas fa-times"></i>
                            {{numberInput system.attributes.death.failure name="system.attributes.death.failure"
                                placeholder="0"}}
                        </div>
                    </div>
                    <div class="counter flexrow exhaustion">
                        <h4>{{ localize "SHAPER.Exhaustion" }}</h4>
                        <div class="counter-value">
                            {{numberInput system.attributes.exhaustion name="system.attributes.exhaustion"
                                placeholder="0"}}
                        </div>
                    </div>
                    <div class="counter flexrow inspiration">
                        <h4>{{ localize "SHAPER.Inspiration" }}</h4>
                        <div class="counter-value">
                            <input type="checkbox" name="system.attributes.inspiration" data-dtype="Boolean"
                                   {{checked system.attributes.inspiration}}/>
                        </div>
                    </div>
                </div>

                {{!-- Traits --}}
                {{> "shaper.actor-traits"}}
            </section>
        </div>

        {{!-- Inventory Tab --}}
        <div class="tab inventory flexcol" data-group="primary" data-tab="inventory">
            {{> "shaper.actor-inventory" sections=inventory}}
        </div>

        {{!-- Features Tab --}}
        <div class="tab features flexcol" data-group="primary" data-tab="features">
            {{> "shaper.actor-features" sections=features}}
        </div>

        {{!-- Spellbook Tab --}}
        <div class="tab spellbook flexcol" data-group="primary" data-tab="spellbook">
            {{> "shaper.actor-spellbook"}}
        </div>

        {{!-- Effects Tab --}}
        <div class="tab effects flexcol" data-group="primary" data-tab="effects">
            {{> "shaper.active-effects"}}
        </div>

        {{!-- Biography Tab --}}
        <div class="tab flexrow" data-group="primary" data-tab="biography">
            <div class="characteristics flexcol">
                <label>{{ localize "SHAPER.Appearance" }}</label>
                <textarea name="system.details.appearance">{{system.details.appearance}}</textarea>
                <label>{{ localize "SHAPER.PersonalityTraits" }}</label>
                <textarea name="system.details.trait">{{system.details.trait}}</textarea>
                <label>{{ localize "SHAPER.Ideals" }}</label>
                <textarea name="system.details.ideal">{{system.details.ideal}}</textarea>
                <label>{{ localize "SHAPER.Bonds" }}</label>
                <textarea name="system.details.bond">{{system.details.bond}}</textarea>
                <label>{{ localize "SHAPER.Flaws" }}</label>
                <textarea name="system.details.flaw">{{system.details.flaw}}</textarea>
            </div>
            <div class="biography">
                {{editor biographyHTML target="system.details.biography.value" button=true editable=editable
                         engine="prosemirror" collaborate=false}}
            </div>
        </div>
    </section>
</form>
